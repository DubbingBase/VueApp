{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "DubbingBase",
  "version": "1.0.5",
  "identifier": "com.dubbingbase.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "DubbingBase",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": {
        "default-src": ["*"],
        "script-src": ["*", "'unsafe-inline'", "'unsafe-eval'", "data:", "blob:"],
        "style-src": ["*", "'unsafe-inline'", "data:", "blob:"],
        "img-src": ["*", "data:", "blob:"],
        "connect-src": ["*", "ws:", "wss:"],
        "object-src": ["'none'"],
        "base-uri": ["'self'"],
        "form-action": ["'self'"],
        "frame-ancestors": ["*"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
